{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Mateusz Kubaszek",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "prebuild": "yarn run clean",
    "clean": "rm -rf ./dist",
    "start": "ts-node ./src/Server.ts",
    "watch": "nodemon --watch './src/**/*.ts' --ignore './src/**/*.*test.ts' --exec 'ts-node' ./src/Server.ts",
    "test:unit": "tsc && node --test ./dist/**/*.test.js",
    "test:component": "jest **/*.ctest.ts",
    "test:integration": "jest **/*.itest.ts",
    "test": "yarn-run-all --parallel test:unit test:component test:integration",
    "lint": "eslint src --ext ts,js --no-ignore --fix",
    "lint:ci": "eslint src --ext ts,js --no-ignore",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test:unit"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "yarn lint:ci",
      "yarn format",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/node": "20.1.7",
    "@types/pino": "7.0.5",
    "eslint": "8.40.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "nodemon": "2.0.22",
    "prettier": "2.8.8",
    "yarn-run-all": "3.1.1"
  },
  "dependencies": {
    "dotenv": "16.0.3",
    "fastify": "4.17.0",
    "pino": "8.14.1",
    "typescript": "5.0.4",
    "uuid": "9.0.0",
    "zod": "3.21.4"
  }
}
