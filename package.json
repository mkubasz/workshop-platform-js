{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Mateusz Kubasze",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "prebuild": "yarn run clean",
    "clean": "rm -rf ./dist",
    "start": "ts-node",
    "watch": "ts-node-dev --respawn",
    "test:unit": "jest **/*.test.ts",
    "test:component": "jest **/*.ctest.ts",
    "test:integration": "jest **/*.itest.ts",
    "test": "yarn-run-all --parallel test:unit test:component test:integration",
    "lint": "eslint src --ext ts,js --no-ignore --fix",
    "lint:ci": "eslint src --ext ts,js --no-ignore",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test:unit"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "yarn lint:ci",
      "yarn format",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "27.4.1",
    "@types/node": "17.0.21",
    "@types/pino": "7.0.5",
    "eslint": "8.10.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "lint-staged": "12.3.5",
    "prettier": "2.5.1",
    "yarn-run-all": "3.1.1"
  },
  "dependencies": {
    "dotenv": "16.0.0",
    "pino": "7.8.1",
    "ts-node": "10.7.0",
    "ts-node-dev": "1.1.8",
    "typescript": "4.6.2",
    "uuid": "8.3.2"
  }
}
